# ============================================
# DeFi Sentinel Backend - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# Server Configuration
# ============================================
PORT=4000
NODE_ENV=development

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=./sqlite.db

# ============================================
# Authentication & Security
# ============================================
# JWT secret for signing authentication tokens (REQUIRED in production)
# Generate a strong random string: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_change_in_production

# Admin secret for protecting admin API endpoints (REQUIRED)
# Generate a strong random string: openssl rand -base64 32
ADMIN_SECRET=your_admin_secret_here

# ============================================
# Blockchain Configuration
# ============================================
# Sepolia testnet RPC URL (for development)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Mainnet RPC URL (for production)
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# Smart contract addresses (update based on deployment)
PAYMENT_CONTRACT_ADDRESS=0x7FDeF9316dBF206f57Aab2eAaE12fC7ee63953A9
BADGE_NFT_ADDRESS=0xA1F0019EE670Aa204f56B7D142AC43C64E998cD9

# ============================================
# External API Keys
# ============================================
# CoinGecko API key (optional for free tier, required for pro features)
# Get yours at: https://www.coingecko.com/en/api/pricing
COINGECKO_API_KEY=your_coingecko_api_key_here

# DefiLlama API key (currently not required, but may be needed in future)
DEFILLAMA_API_KEY=

# ============================================
# Feature Flags (optional)
# ============================================
# Enable/disable blockchain event listeners
ENABLE_BLOCKCHAIN_LISTENERS=true

# Enable/disable automatic data synchronization
ENABLE_DATA_SYNC=true

# Data sync interval in milliseconds (default: 24 hours)
SYNC_INTERVAL=86400000

# ============================================
# Logging & Monitoring (optional)
# ============================================
LOG_LEVEL=info

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=your_sentry_dsn_here
